{
  "name": "vibelog",
  "version": "1.0.0",
  "description": "Auto-generate verified AI build logs for hackathons with onchain proof",
  "main": "dist/index.js",
  "bin": {
    "vibe": "./dist/index.js",
    "vibelog": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "contracts",
    "docs",
    "examples",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs');const f='dist/index.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!/')){fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c)}\"",
    "dev": "tsx src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy.cts --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.cts --network bscMainnet"
  },
  "keywords": [
    "hackathon",
    "build-log",
    "blockchain",
    "bnb-chain",
    "bsc",
    "ai",
    "documentation",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "simple-git": "^3.21.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "hardhat": "^2.19.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
